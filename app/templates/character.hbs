<div class="character">

</div>
<div class="row">
  <div class="col-xs-4">
    <img class= "d-flex mr-3" src={{model.image}} alt={{model.name}}>
  </div>
  <div class="col-xs-8">
    <div class="header">
      <h2 class="mt-0">{{model.name}}</h2>
      <h4>The {{model.profession}}</h4>
    </div>
    <h5><strong>Weapon of choice: </strong>{{model.weapon}}</h5>
    <h6><strong>Idol: </strong>{{model.idol}}</h6>
    <blockquote>{{model.bio}}</blockquote>
    {{#link-to 'murdo' model.murdo}}Back to {{model.name}}'s murdo investiagtion{{/link-to}}
  </div>
</div>
