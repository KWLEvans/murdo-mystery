<h3 class="header">Create a character</h3>
<form id="create-character">
  <div class="form-group">
    <label for="name">Character name:</label>
    {{input value=name id="name" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="profession">Character profession:</label>
    {{input value=profession id="profession" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="idol">Who is their idol though?:</label>
    {{input value=idol id="idol" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="weapon">Favorite weapon:</label>
    {{input value=weapon id="weapon" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="bio">Character bio:</label>
    {{textarea value=bio id="bio" class="form-control" rows="10"}}
  </div>

  <div class="form-group">
    <label for="image">Character image URL:</label>
    {{input value=image id="image" class="form-control"}}
  </div>

  <button class="btn"{{action 'create'}}>Save</button>
</form>
