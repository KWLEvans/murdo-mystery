<h3>Create a murdo</h3>
<form>
  <div class="form-group">
    <label for="title">Murdo title:</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="victim">Murdoee:</label>
    {{input value=victim id="victim" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="location">Location:</label>
    {{input value=location id="location" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="story">Back story:</label>
    {{textarea value=story id="story" class="form-control" rows="10"}}
  </div>

  <button class="btn"{{action 'create'}}>Save</button>
</form>
